@using DatabaseDesignProject.Controllers
@model Shoe

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-8">Are you sure you want to delete this shoe: @Model.brand_name @Model.shoe_name?</h1>
</div>
<br/>
<br />


<table class="table">
    <tbody>
        <tr class="text-center">
            <td style="text-align: center; vertical-align: middle;">
                <a asp-action="ShoeList">No, go back</a>
            </td>          
        </tr>
        <tr class="text-center">
            <td style="text-align: center; vertical-align: middle;">
                <form method="post" id="FormThatAddShoe">
                    <button class="btn btn-danger" type="submit">Yes, Delete</button>
                </form>
            </td>
        </tr>
    </tbody>
</table>