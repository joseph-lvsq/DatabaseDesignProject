@using DatabaseDesignProject.Controllers
@model User

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Add User</h1>
</div>

<form method="post" id="FormThatAddUser">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Username:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="username" id="username"/>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Password:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="password" id="password"/>
        </div>
    </div>
    

    <div class="col-sm-5 my-3">
        <button class="btn btn-primary" type="submit">Create User</button>
    </div>
</form>